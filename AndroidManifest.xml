<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.logostudios.azteka"
      android:versionCode="15"
      android:versionName="1.3.7">
    <uses-sdk android:minSdkVersion="7" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <supports-screens android:smallScreens="true"
                  android:normalScreens="true"
                  ></supports-screens>
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="com.logosstudios.azteka.Azteka">
        <activity android:name="com.logosstudios.azteka.TitleScreen"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.logosstudios.azteka.Game"
            	  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.logosstudios.azteka.GameNight"
            	  android:screenOrientation="portrait">
		</activity>
		
        <activity android:name="com.logosstudios.azteka.EndScreen"
            android:screenOrientation="portrait">
		</activity>
		
		<activity android:name="com.logosstudios.azteka.Instructions"
            android:screenOrientation="portrait">
		</activity>
		<activity android:name="com.logosstudios.azteka.PowerUps"
            android:screenOrientation="portrait">
		</activity>
		<activity android:name="com.logosstudios.azteka.Hints"
            android:screenOrientation="portrait">
		</activity>
		<activity android:name="com.logosstudios.azteka.LeaderboardActivity"
		    android:configChanges="keyboardHidden|keyboard|orientation"
            android:screenOrientation="portrait">
		</activity>
		<activity android:name="com.logosstudios.azteka.Username"
            android:screenOrientation="portrait">
		</activity>
		
        <activity android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize">
        </activity>
        
        <activity android:name="com.scoreloop.client.android.core.ui.ProxyActivity" android:configChanges="orientation|keyboard|keyboardHidden"/>
    </application>
</manifest>